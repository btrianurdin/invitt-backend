{
    "typeRoots": [
        "src/types", // this is where you define your types
        "node_modules/@types" //this where npm packages containing types are located
    ],
    "compilerOptions": {
        "sourceMap": true,
        "target": "es6",
        "module": "commonjs",
        "outDir": "dist",
        "baseUrl": "/",
        "paths": {
            "@/*": [
                "src/*"
            ]
        },
        "esModuleInterop": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ],
}